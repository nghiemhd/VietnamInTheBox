@helper PreconfigureSystem()
{
    <table class="adminContent">
        <tr>
            <td>
                <h4>This tab allows you to preconfigure the theme for correct working:</h4>
                <ul>
                    <li>Set "Product thumbnail image size (catalog)" to 330</li>
                    <li>Set "Product detail image size" to 600</li>
                    <li>Set "Product thumbnail image size (product page)" to 180</li>
                    <li>Set "Number of manufacturers to display" to 15</li>
                    <li>Set "Number of also purchased products to display" to 6</li>
                    <li>Set "'Products by tag' Page Size options (comma separated)" to 6, 3, 12, 24</li>
                    <li>Enadle "Use images for language selection"</li>
                    <li>Disable default Nivo Slider widget (if installed)</li>
                </ul>
            </td>
        </tr>
        <tr>
            <td colspan="2" width="100%">
                <input type="submit" name ="preconfigure" class="t-button" value="@T("Clothes.Preconfigure")"/>
            </td>
        </tr>
    </table>
}

@helper SampleData()
{
    <table class="adminContent">
        <tr>
            <td>
                @if(Model.DataAlreadyInstalled)
                {
                    <h4>@T("Clothes.DataAlreadyInstalled")</h4>
                }
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name ="installsampledata" class="t-button" value="@T("Clothes.InstallSampleData")" onclick="return InstallSampleData()" />
                <p><b>@T("Clothes.SampleData.Note")</b></p>
            </td>
        </tr>
    </table>
    
    <div class="throbber"> 
        <div class="curtain">
        </div>
        <div class="curtain-content">
            <div>
                <h1 class="throbber-header">
                    @T("Clothes.Installing")</h1>
                <p>
                    <img src="@Url.Content("~/content/install/images/install-synchronizing.gif")" alt="" />
                </p>
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        function InstallSampleData() {
            if (confirm('@T("Admin.Common.AreYouSure")')) {
                $('.throbber').show();
                return true;
            } else {
                return false;
            }
        }
    </script>
}