@using Telerik.Web.Mvc.UI
@using Nop.Web.Framework
@model Nop.Plugin.ThemeHelper.Clothes.Models.ConfigurationModel
@{
    Layout = "";
}

@Html.ValidationSummary(false)

@using (Html.BeginForm())
{
    @Html.Telerik().TabStrip().Name("configure").Items(x =>
{
    x.Add().Text(T("Clothes.Configuration").Text).Content(Configuration().ToHtmlString()).Selected(true);
    x.Add().Text(T("Clothes.PreconfigureSystem").Text).Content(PreconfigureSystem().ToHtmlString());
    x.Add().Text(T("Clothes.SampleData").Text).Content(SampleData().ToHtmlString());
})
}

